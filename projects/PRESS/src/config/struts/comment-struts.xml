<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
   <package name="comment" namespace="/comment" extends="default">
		<action name="comment_*" class="commentAction" method="{1}">
			<result name="to_index">/WEB-INF/jsp/comment/comment_index.jsp</result>
			<result name="to_view">/WEB-INF/jsp/comment/comment_view.jsp</result>
			<result name="redirect_index" type="redirect">/comment/comment_to_index.action
			</result>
		</action>
	</package>
	
</struts>

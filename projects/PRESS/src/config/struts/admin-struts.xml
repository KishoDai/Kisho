<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
   <package name="admin" namespace="/admin" extends="default">
		<action name="admin_*" class="adminAction" method="{1}">
		    <result name="to_iframe">/WEB-INF/jsp/comm/iframe.jsp</result>
			<result name="to_index">/WEB-INF/jsp/admin/admin_update.jsp</result>
			<result name="redirect_index" type="redirect">/admin/admin_to_index.action</result>
			<result name="to_update_password">/WEB-INF/jsp/admin/admin_update_password.jsp</result>
		</action>
	</package>
	
</struts>
